{
  "name": "invoice-app",
  "version": "1.0.0",
  "description": "Full-stack invoice management application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run start:dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm run start:prod",
    "db:setup": "docker-compose up -d && cd server && npm run prisma:migrate && npm run prisma:seed",
    "db:reset": "cd server && npm run db:reset",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "invoice",
    "nestjs",
    "react",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
